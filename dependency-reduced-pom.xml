      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <rundeckVersion>2.7.1</rundeckVersion>
    <outputDirectory>${project.build.directory}</outputDirectory>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

